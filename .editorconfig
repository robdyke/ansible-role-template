# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Common config for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation rules for Python and Yaml
[*.{py}]
indent_style = space
indent_size = 4
[*.{yml,yaml,sls}]
indent_style = space
indent_size = 2
